<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp">

        <TextView
            android:id="@+id/materia_top"
            android:layout_width="8dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:backgroundTint="@color/gris_claro"
            android:background="@drawable/borde_celda"
            android:text="MATERIA"
            android:padding="4dp" />

        <TextView
            android:id="@+id/pa1_top"
            android:layout_width="8dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:backgroundTint="@color/gris_claro"
            android:background="@drawable/borde_celda"
            android:text="Parcial N째1"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tp1_top"
            android:layout_width="8dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:backgroundTint="@color/gris_claro"
            android:background="@drawable/borde_celda"
            android:text="Trabajo Practico N째1"
            android:padding="4dp" />

        <TextView
            android:id="@+id/pa2_top"
            android:layout_width="8dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:backgroundTint="@color/gris_claro"
            android:background="@drawable/borde_celda"
            android:text="Parcial N째2"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tp2_top"
            android:layout_width="8dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:backgroundTint="@color/gris_claro"
            android:background="@drawable/borde_celda"
            android:text="Trabajo Practico N째1"
            android:padding="4dp" />

        <TextView
            android:id="@+id/promedio_top"
            android:layout_width="10dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/gris_claro"
            android:text="Promedio"
            android:padding="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>